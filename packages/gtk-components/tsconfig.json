{
  "compilerOptions": {
    "outDir": "./dist",
    "lib": [
      "ESNext"
    ],
    "types": [
      "@girs/adw-1",
      "@girs/gjs",
      "@girs/gjs/dom",
      "@girs/gio-2.0",
      "@girs/gobject-2.0",
      "@girs/gtk-4.0",
      "@girs/graphene-1.0"
    ],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    ".eslintrc.mjs",
    "../../esbuild.js",
    "src/rendering/render.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}