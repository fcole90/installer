{
  "compilerOptions": {
    "outDir": "./dist",
    "lib": [
      "ESNext"
    ],
    "paths": {
      "gtk-components": [
        "../gtk-components/*"
      ],
    },
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    ".eslintrc.cjs",
    "esbuild.js"
  ],
  "exclude": [
    "node_modules"
  ]
}